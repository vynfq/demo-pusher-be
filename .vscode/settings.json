{
  "editor.tabSize": 2,
  "editor.rulers": [100],
  "editor.wordWrapColumn": 80,
  "editor.formatOnSave": false,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules/": true,
    "**/.nuxt/": true,
    "**/build/": true,
    "coverage": true,
    "coverage.lcov": true
  }
}
